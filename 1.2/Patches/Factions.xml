				<!--settlement-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="SettlerSavage"]/pawnGroupMakers/li[kindDef="Settlement"]/options</xpath>
					<value>
						<SkellinBandit>2.5</SkellinBandit>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
