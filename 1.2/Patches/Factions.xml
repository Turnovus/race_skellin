					<value>
						<SkellinSettler>2.5</SkellinSettler>
					</value>
				</li>
				
				<!--rough settlers-->
				<!--raid-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="SettlerRough"]/pawnGroupMakers/li[kindDef="Combat"]/options</xpath>
					<value>
