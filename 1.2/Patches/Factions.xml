					<value>
						<SkellinBandit>2.5</SkellinBandit>
					</value>
				</li>
				
				<!--bandits-->
				<!--raid-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="SettlerSavage"]/pawnGroupMakers/li[kindDef="Combat"]/options</xpath>
					<value>
						<SkellinBandit>2</SkellinBandit>
					</value>
				</li>
				
				<!--peaceful-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="SettlerSavage"]/pawnGroupMakers/li[kindDef="Peaceful"]/options</xpath>
					<value>
						<SkellinCivvie>1</SkellinCivvie>
