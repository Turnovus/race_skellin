<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>ToxicFlu</defName>
		<label>toxic flu</label>
		<description>An adverse, but non-lethal reaction to toxic compounds that is exclusive to Skellins. May cause behavioral abnormalities at high severities.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<!--<lethalSeverity>1</lethalSeverity>-->
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<taleOnVisible>ToxicityRevealed</taleOnVisible>
		<!--
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>1.1</lethalSeverity>
		-->
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.08</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<vomitMtbDays>3</vomitMtbDays>
				<label>initial</label>
				<minSeverity>0.04</minSeverity>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.01</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<vomitMtbDays>2.5</vomitMtbDays>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<vomitMtbDays>2</vomitMtbDays>
				<label>moderate</label>
				<minSeverity>0.4</minSeverity>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.07</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>5</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
			<li>
				<vomitMtbDays>1.5</vomitMtbDays>
				<label>serious</label>
				<minSeverity>0.6</minSeverity>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.50</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>3</mtbDays>
					</li>
					<li>
						<mentalState>Berserk</mentalState>
						<mtbDays>4</mtbDays>
					</li>
					<li>
						<mentalState>MurderousRage</mentalState>
						<mtbDays>6</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
			<li>
				<vomitMtbDays>1</vomitMtbDays>
				<label>extreme</label>
				<minSeverity>0.80</minSeverity>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.60</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>2</mtbDays>
					</li>
					<li>
						<mentalState>Berserk</mentalState>
						<mtbDays>2</mtbDays>
					</li>
					<li>
						<mentalState>MurderousRage</mentalState>
						<mtbDays>4</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>